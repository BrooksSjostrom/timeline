module Types exposing (..)


type Model
    = Setup SetupModel 
    | Play PlayModel
    | MoreInfo Event Model

type alias SetupModel
    = List String

type alias PlayModel =
    { deck : List Event
    , active : Event
    , played : List Event
    }

type alias Event =
    {name : String
    , date : Int
    , desc : String
    }


type Msg
    = Guess Maybe Event Maybe Event -- Guess the *active* to be *between* event 1 & 2
    | Select String
    | LearnMore Event
    | Back
    | Start
